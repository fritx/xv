{
  "name": "xv",
  "version": "2.1.1",
  "description": "Modern and low maintenance test runner",
  "keywords": [
    "test",
    "framework",
    "lib",
    "cli",
    "runner",
    "assert",
    "jest",
    "mocha",
    "ava",
    "tap",
    "tape",
    "async",
    "await",
    "typescript"
  ],
  "homepage": "https://github.com/typicode/xv#readme",
  "bugs": {
    "url": "https://github.com/typicode/xv/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/typicode/xv.git"
  },
  "funding": "https://github.com/sponsors/typicode",
  "license": "MIT",
  "author": "Typicode <typicode@gmail.com>",
  "type": "commonjs",
  "bin": "./lib/bin.js",
  "files": [
    "lib",
    "!lib/**/*.test.js",
    "!lib/**/test.js"
  ],
  "scripts": {
    "test": "npm run build && npm run test:js && npm run test:js:no-param && npm run test:ts && npm run test:ts:no-param",
    "test:js": "node lib/bin.js lib",
    "test:js:no-param": "cd lib && node bin.js",
    "test:ts": "node lib/bin.js --loader=ts-node/esm --experimental-modules src",
    "test:ts:no-param": "cd src && node ../lib/bin.js --loader=ts-node/esm --experimental-modules",
    "test:output": "node lib/bin.js output.js",
    "lint": "eslint src --ext .ts --ignore-path .gitignore",
    "build": "del-cli lib && tsc",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "postversion": "git push && git push --tags && npm publish"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^3.0.1",
    "@types/node": "^18.11.12",
    "@typicode/eslint-config": "^1.1.0",
    "del-cli": "<4.0.0",
    "husky": "^8.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=12"
  }
}
